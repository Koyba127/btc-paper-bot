[Unit]
Description=BTC Paper Trading Bot
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/btc-paper-bot
ExecStart=/home/pi/btc-paper-bot/.venv/bin/python main.py
Restart=always
RestartSec=5
StandardOutput=append:/home/pi/btc-paper-bot/logs/service.log
StandardError=append:/home/pi/btc-paper-bot/logs/service_error.log
EnvironmentFile=/home/pi/btc-paper-bot/.env
Nice=10
MemoryMax=500M

[Install]
WantedBy=multi-user.target
